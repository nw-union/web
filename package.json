{
  "name": "web-new",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "db:generate": "drizzle-kit generate --config ./adapter/drizzle/drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply --local DB",
    "db:migrate:production": "wrangler d1 migrations apply --env production --remote DB",
    "db:sampledata:local": "wrangler d1 execute weeklycontents-local --file ./adapter/drizzle/sampledata/data.sql --local",
    "dev": "react-router dev",
    "start": "wrangler dev",
    "deploy:development": "wrangler deploy --env development",
    "deploy:production": "wrangler deploy --env production",
    "typecheck": "wrangler types && react-router typegen && tsc -b",
    "check": "biome check --write . && bun run typecheck",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@nw-union/nw-utils": "^0.0.4",
    "@react-router/cloudflare": "^7.10.1",
    "@tiptap/extension-dropcursor": "^3.13.0",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/bun": "^1.3.4",
    "drizzle-orm": "~0.45.1",
    "isbot": "^5.1.32",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@react-router/dev": "^7.10.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "~0.31.8",
    "jose": "^6.1.3",
    "neverthrow": "^8.2.0",
    "tailwindcss": "^4.1.18",
    "ts-pattern": "^5.9.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.1",
    "wrangler": "^4.54.0",
    "zod": "^4.2.0"
  }
}
