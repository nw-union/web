                </svg>
                <span>Discord Server</span> <span class="text-yellow-400 ml-2 blink-text"><- join us!</span>
              </a>
              <a href="https://www.youtube.com/@nw-union" target="_blank" rel="noreferrer" class="social-link text-green-600 dark:text-green-400 no-underline flex items-center gap-2 py-1 transition-colors duration-300 hover:text-cyan-600 dark:hover:text-cyan-400 hover:underline">
                <svg class="w-6 h-6 md:w-7 md:h-7 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
                <span>YouTube</span>
              </a>
              <a href="https://github.com/nw-union" target="_blank" rel="noreferrer" class="social-link text-green-600 dark:text-green-400 no-underline flex items-center gap-2 py-1 transition-colors duration-300 hover:text-cyan-600 dark:hover:text-cyan-400 hover:underline">
                <svg class="w-6 h-6 md:w-7 md:h-7 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/>
                </svg>
                <span>GitHub</span>
              </a>
            </div>
          </div>
        </div>

        <div class="terminal-line flex items-center my-2 gap-2 opacity-0" id="line-4">
          <span class="text-green-600 dark:text-green-400 font-bold">$</span>
          <span class="text-gray-800 dark:text-white" id="cmd-4"></span>
          <span class="cursor text-green-600 dark:text-green-400 animate-pulse" id="cursor">_</span>
        </div>
      </div>
    </div>
  </main>

  <style>
    .min-h-300 {
      min-height: 300px;
    }

    .min-h-400 {
      min-height: 400px;
    }

    .leading-custom {
      line-height: 1.8;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }

    @keyframes fadeOut {
      from { opacity: 1; }
      to { opacity: 0; }
    }

    .cursor {
      animation: blink 1s infinite;
    }

    .blink-text {
      animation: blink 1s infinite;
    }

    .fade-out {
      animation: fadeOut 1s ease-out forwards;
    }
  </style>

  <script>
    class TerminalTyper {
      constructor() {
        this.currentStep = 0;
        this.typeSpeed = 50;
        this.commandSpeed = 100;
        this.init();
      }

      init() {
        this.animateStep(0);
      }

      async animateStep(step) {
        switch(step) {
          case 0:
            await this.showLine('line-1');
            await this.typeCommand('cmd-1', 'whoami');
            await this.showOutput('output-1');
            const asciiArt = ` ███╗   ██╗ ██╗    ██╗ ██╗   ██╗
 ████╗  ██║ ██║    ██║ ██║   ██║
 ██╔██╗ ██║ ██║ █╗ ██║ ██║   ██║
 ██║╚██╗██║ ██║███╗██║ ██║   ██║
 ██║ ╚████║ ╚███╔███╔╝ ╚██████╔╝
 ╚═╝  ╚═══╝  ╚══╝╚══╝   ╚═════╝`;
            await this.showAsciiArt('name-text', asciiArt);
            await this.delay(400);
            await this.typeText('about-text', 'Hangout crew. Lovers of Culture, Art and Tech!');
            await this.delay(800);
            this.animateStep(1);
            break;
          case 1:
            await this.showLine('line-3');
            await this.typeCommand('cmd-3', 'ls -la social/');
            await this.showOutput('output-3');
            await this.showSocialLinks();
            await this.delay(800);
            this.animateStep(2);
            break;
          case 2:
            await this.showLine('line-4');
            break;
        }
      }

      async showLine(elementId) {
        const element = document.getElementById(elementId);
        if (element) {
          element.style.opacity = '1';
          element.style.animation = 'fadeIn 0.3s ease-in-out';
        }
        await this.delay(300);
      }

      async showOutput(elementId) {
        const element = document.getElementById(elementId);
        if (element) {
          element.style.opacity = '1';
          element.style.animation = 'fadeIn 0.3s ease-in-out';
        }
        await this.delay(300);
      }

      async typeCommand(elementId, text) {
        const element = document.getElementById(elementId);
        if (!element) return;

        element.textContent = '';
        for (let i = 0; i < text.length; i++) {
          element.textContent += text[i];
          await this.delay(this.commandSpeed);
        }
        await this.delay(300);
      }

      async typeText(elementId, text) {
        const element = document.getElementById(elementId);
        if (!element) return;

        element.style.opacity = '1';

        if (text.includes('\n')) {
          const lines = text.split('\n');
          element.innerHTML = '';
          for (let i = 0; i < lines.length; i++) {
            if (i > 0) element.innerHTML += '<br>';
            await this.typeTextLine(element, lines[i]);
          }
        } else {
          await this.typeTextLine(element, text);
        }
      }

      async typeTextLine(element, text) {
        const currentContent = element.innerHTML;
        for (let i = 0; i < text.length; i++) {
          element.innerHTML = currentContent + text.substring(0, i + 1);
          await this.delay(this.typeSpeed);
        }
      }

      async showSocialLinks() {
        const element = document.getElementById('social-text');
        if (element) {
          element.style.opacity = '1';
          element.style.animation = 'fadeIn 0.5s ease-in-out';
        }
      }
      
      async showAsciiArt(elementId, text) {
        const element = document.getElementById(elementId);
        if (!element) return;
        
        element.style.opacity = '1';
        element.textContent = text;
        element.style.animation = 'fadeIn 0.5s ease-in-out';
      }

      delay(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      new TerminalTyper();
    });
  </script>
</Layout>
