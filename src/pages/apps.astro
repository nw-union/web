---
import ThemeToggle from "../components/ThemeToggle.astro";
import Layout from "../layouts/Layout.astro";

const apps = [
  {
    name: "BeTree",
    description: "気になるイベント管理ツール",
    url: "https://betree.nw-union.net",
    source: "https://github.com/nw-union/betree",
    icon: "🌳",
    status: "development",
  },
  {
    name: "Hypomnema",
    description: "自己の記録 / 覚え書き のためのエディタ",
    url: "https://hypomnema.nw-union.net",
    source: "https://github.com/nw-union/hypomnema",
    icon: "🧠",
    status: "live",
  },
  {
    name: "Weekly Contents",
    description: "コンテンツの排泄場所 (更新停止中)",
    url: "https://wc.nw-union.net",
    source: "https://github.com/nw-union/weeklycontents",
    icon: "🧻",
    status: "live",
  },
  {
    name: "Ogp API",
    description: "外部サイトの OGP の情報を取得する API",
    url: "https://ogp.nw-union.net",
    source: "https://github.com/nw-union/ogp",
    icon: "🔧",
    status: "live",
  },
  {
    name: "Web サイト",
    description: "シンプルなランディングページ。ドキュメント置き場。",
    url: "https://nw-union.net",
    source: "https://github.com/nw-union/web",
    icon: "🌐",
    status: "live",
  },
];
---

<Layout
  title="Apps | NWU"
  description="NWUが開発したアプリケーション一覧"
>
  <main class="bg-white dark:bg-black min-h-screen flex flex-col justify-start items-center p-6 pt-8 md:pt-14 transition-colors duration-300 font-sg">
    <ThemeToggle />
    <div class="max-w-6xl w-full">
      <div class="my-20">
        <h1 class="text-2xl py-2 font-medium text-center text-gray-800 dark:text-gray-300">
          Apps
        </h1>
        <p class="text-center text-lg text-gray-700 dark:text-gray-300">
          アプリケーション一覧
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {apps.map((app) => (
          <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-6 transition-all duration-300 hover:scale-105 hover:shadow-xl border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-cyan-400">
            <div class="flex items-start justify-between mb-4">
              <div class="text-4xl">{app.icon}</div>
              {/*
              <span class={`
                px-2 py-1 rounded text-xs font-semibold uppercase
                ${app.status === 'live' ? 'bg-blue-600 text-white dark:bg-cyan-400 dark:text-black' : ''}
                ${app.status === 'development' ? 'bg-yellow-500 text-black dark:bg-yellow-400' : ''}
                ${app.status === 'coming-soon' ? 'bg-gray-400 text-white dark:bg-gray-600' : ''}
              `}>
                {app.status === 'live' && 'LIVE'}
                {app.status === 'development' && 'DEV'}
                {app.status === 'coming-soon' && 'SOON'}
              </span>
              */}
            </div>

            <h2 class="text-2xl font-semibold mb-2 text-gray-800 dark:text-gray-300">
              {app.name}
            </h2>

            <p class="text-gray-700 dark:text-gray-300 mb-6 text-sm">
              {app.description}
            </p>

            {app.status === 'live' ? (
              <div class="flex gap-3">
                <a
                  href={app.url}
                  target="_blank"
                  rel="noreferrer"
                  class="inline-flex items-center gap-2 pl-4 pr-6 py-2 bg-blue-600 dark:bg-cyan-400 text-white dark:text-black rounded-md hover:bg-blue-700 dark:hover:bg-cyan-500 transition-colors duration-300 text-sm font-medium"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  <span>Open App</span>
                </a>
                <a
                  href={app.source}
                  target="_blank"
                  rel="noreferrer"
                  class="inline-flex items-center gap-2 pl-4 pr-6 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-300 text-sm font-medium"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span>Edit Code</span>
                </a>
              </div>
            ) : (
              <span class="text-gray-500 dark:text-gray-400 text-base">
                {app.status === 'development' && '🔧 開発中...'}
              </span>
            )}
          </div>
        ))}
      </div>

    </div>
  </main>
</Layout>
